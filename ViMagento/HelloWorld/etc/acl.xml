<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="ViMagento_HelloWorld::vimagento" title="Use ACL" sortOrder="100">
                    <resource id="ViMagento_HelloWorld::post" title="Posts" sortOrder="10"/>
                    <resource id="ViMagento_HelloWorld::menu" title="Menu" sortOrder="20" />
                    <resource id="ViMagento_HelloWorld::Configuration" title="Configuration" sortOrder="30" />
                </resource>
                <resource id="Magento_Backend::marketing">
                    <resource id="ViMagento_HelloWorld::helloworld" title="HelloWorld" sortOrder="60">
                        <resource id="ViMagento_HelloWorld::index" title="HelloWorld index" sortOrder="10"/>
                        <resource id="ViMagento_HelloWorld::subscription" title="HelloWorld subscription" sortOrder="20"/>
                        <resource id="ViMagento_HelloWorld::component" title="HelloWorld Components" sortOrder="30"/>
                    </resource>
                </resource>

                <resource id="Magento_Backend::stores">
                    <resource id="Magento_Backend::stores_settings">
                        <resource id="Magento_Config::config">
                            <resource id="ViMagento_HelloWorld::config_helloworld" title="HelloWorld Section" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
</config>
